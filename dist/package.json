        "@types/figlet": "^1.2.0",
        "@types/i18n": "^0.8.6",
        "@types/node": "^13.11.0",
        "@types/node-emoji": "^1.8.1",
        "@typescript-eslint/eslint-plugin": "^2.27.0",
        "@typescript-eslint/parser": "^2.27.0",
        "eslint": "^6.8.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^6.10.1",
